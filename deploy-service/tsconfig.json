{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src",                                  /* Correct root directory */
    "outDir": "./dist",                                  /* Output folder for compiled code */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"                                           /* Include all files in src */
  ],
  "exclude": [
    "dist/**/*"                                          /* Exclude files in dist */
  ]
}
